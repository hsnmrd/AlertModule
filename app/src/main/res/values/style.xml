<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="textInputStyle">@style/FontTextInputLayout</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ProgressAnimation</item>
    </style>

    <style name="ProgressAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_exit</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="FontTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextInputLayoutHintText</item>
        <item name="helperTextTextAppearance">@style/TextInputLayoutHelperText</item>
        <item name="errorTextAppearance">@style/TextInputLayoutErrorText</item>
    </style>

    <style name="TextInputLayoutHintText" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">@font/light</item>
    </style>

    <style name="TextInputLayoutHelperText" parent="TextAppearance.Design.HelperText">
        <item name="android:fontFamily">@font/light</item>
    </style>

    <style name="TextInputLayoutErrorText" parent="TextAppearance.Design.Error">
        <item name="android:fontFamily">@font/light</item>
    </style>


    <style name="FullScreenBlurDialogLight" parent="Theme.ProgressModule">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogBlurAnimation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="DialogBlurAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_exit</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="FullScreenDialogLight" parent="Theme.ProgressModule">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_exit</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

</resources>